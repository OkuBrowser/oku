{
    "app-id": "com.github.madebyemil.oku",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-nightly"
    ],
    "command": "oku",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path" : "/usr/lib/sdk/rust-nightly/bin",
        "env" : {
            "RUSTFLAGS" : "--remap-path-prefix =../",
            "CARGO_HOME" : "/run/build/oku/cargo"
        }
    },
    "modules": [
        {
            "name": "oku",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/release/oku -t /app/bin/",
                "install -Dm644 ./data/${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/",
                "install -Dm644 ./data/${FLATPAK_ID}.desktop -t /app/share/applications/",
                "install -Dm644 ./data/hicolor/*/** -t /app/share/icons/hicolor/scalable/apps/",
                "install -Dm644 ./README -t /app/share/doc/oku/",
                "install -Dm644 ./COPYING -t /app/share/doc/oku/"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                },
                "cargo-sources.json"
            ]
        }
    ]
}